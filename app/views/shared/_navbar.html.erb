<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to "/#", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dzmyhcemr/image/upload/v1639550269/Planetravel_pzry8w.png" %>
    Planetravel
  <% end %>
<div class="cover">

  <form class="flex-form" method="get" action="<%= planets_path %>">

    <input type="search" placeholder="Where do you want to go ?" name="search[planet]" />
    <label for="from">From</label>
    <input type="date" name="search[from]" />

    <label for="to">To</label>
    <input type="date" name="search[to]" />

    <label for="to">Nb of guests</label>
    <input type="number" name="search[gests]" />

    <input type="submit" value="Search" />

  </form>

</div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "/#", class: "nav-link" %>
        </li>
        <%# <li class="nav-item"> %>
          <%# <%= link_to "Messages", "#", class: "nav-link" %>
        <%# </li> %>
        <li class="nav-item">
          <%= link_to "Add a planet", new_planet_path, class: "nav-link" %>

        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/dzmyhcemr/image/upload/v1639731113/Pouipoui_2_pmcmhg.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My profil", about_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
