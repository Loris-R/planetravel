<h2>Edit your Planet here</h2>

<div class="container">
  <%= simple_form_for @planet do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :available_places %>
    <%= f.input :price_per_night %>
    <%= f.button :submit %>
  <% end %>
</div>
<div>
  <%= link_to 'Destroy', planet_path(@planet), method: :delete, data: {confirm: 'Are you sure?' } %>
</div>
