<div class="carte">
<h1><%= @planet.name %></h1>

  <div>
      <div>
        <% if @planet.photo.attached? %>
          <%= cl_image_tag @planet.photo.key, height: 300, crop: :fill %>
        <% else %>
          <img src="https://i.pinimg.com/originals/21/c7/3a/21c73ae28de02eaeee9dc34a22e0aadf.jpg" alt="" height="300px">
        <% end %>
        <div>
          <p><%= link_to 'Book your trip here', new_planet_booking_path(@planet) %></p>
        </div>
        <h2>Planet infos</h2>
        <ul>
          <li><strong>Planet's owner</strong> : <%= @planet.user.name %></li>
          <li><strong>Planet's name</strong> : <%= @planet.name %></li>
          <li><strong>Planet's address</strong> : <%= @planet.address %></li>
          <li><strong>Available places</strong> : <%= @planet.available_places %></li>
          <li><strong>Price for 1 night</strong> : <%= @planet.price_per_night %> Republican Credits</li>
          <li><strong>Climat</strong> : <%= @planet.climat %>s</li>
          <li><strong>Specie living on</strong> : <%= @planet.specie %></li>
          <li><strong>What do do here</strong> : <%= @planet.activity %></li>
        </ul>
      <div>
</div>
  <%= link_to 'Back to list', planets_path %>
</div>

<div>
  <% if policy(@planet).edit? %>
    <%= link_to 'Edit', edit_planet_path(@planet) %>
  <% end %>
</div>

