<h2>Add your Planet</h2>

<div class="container">
  <%= simple_form_for @planet do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :available_places %>
    <%= f.input :price_per_night %>
    <%= f.input :description %>
    <%= f.input :climat %>
    <%= f.input :specie %>
    <%= f.input :activity, collection: Planet::ACTIVITIES %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
  <% end %>
</div>
