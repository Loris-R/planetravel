<h1>Hello <%= @user.name %></h1>

<div>
<p>Your full name:<%= @user.name %></p>
<p>Your email:<%= @user.email %></p>
<p>Your phone number:<%= @user.phone_number %></p>
<p><%= link_to 'Edit profil', edit_user_registration_path %></p>
</div>

<div>
  <h4>Your trips</h4>
  <ul>
    <% @requested_bookings.each do |booking| %>
      <% planet = booking.planet %>
      <% if booking.status != 'Declined' %>
        <li><%= link_to 'Cancel', booking_path(booking), method: :delete, data: { confirm: 'Are you sure ?'} %> |
            <%= planet.name %> (<%= booking.status %>) -
            from <%= booking.arrival_date %>
            to <%= booking.departure_date %> -
            <%= booking.total_price %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<div>
  <h4>Your bookings</h4>
  <ul>
    <% @bookings_on_my_planets.each do |booking| %>
    <% planet = booking.planet %>
        <li><%= link_to 'Accept', accept_booking_path(booking), method: :patch %> | <%= link_to 'Reject', reject_booking_path(booking), method: :patch %><%= planet.name %> (<%= booking.status %>) -
        from <%= booking.arrival_date %>
        to <%= booking.departure_date %> -
        <%= booking.total_price %></li>
    <% end %>
  </ul>
</div>

<% console %>
